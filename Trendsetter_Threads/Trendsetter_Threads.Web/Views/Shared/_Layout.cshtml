<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../themefolder/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../themefolder/img/favicon.png">
    <title>
        TrendSetter_Threads
    </title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"> </script>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

    @* data-tables *@
    <link src="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css" />
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>


    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="../themefolder/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../themefolder/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="../themefolder/css/material-dashboard.css?v=3.1.0" rel="stylesheet" />
    <!-- Nepcha Analytics (nepcha.com) -->

</head>
<body class="g-sidenav-show  bg-gray-200">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href="/Product/Index">
                <img src="../themefolder/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">TrendSetter_Threads</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white active" id="productnav" href="/Product/Index" onclick="activeNav('productnav')">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">dashboard</i>
                        </div>
                        <span class="nav-link-text ms-1">Products</span>
                    </a>
                </li>
                 @if (Context.Session.GetInt32("IsAdmin") != 1)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" id="cartnav" href="/Cart/Index" onclick="activeNav('cartnav')">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">table_view</i>
                            </div>
                            <span class="nav-link-text ms-1">Cart</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" id="ordernav" href="/Order/Index" onclick="activeNav('ordernav')">
                            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="material-icons opacity-10">receipt_long</i>
                            </div>
                            <span class="nav-link-text ms-1">Orders</span>
                        </a>
                    </li>
                }
                

            </ul>
        </div>

    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
       
        @RenderBody()
    </main>
   

    <!--   Core JS Files   -->
    <script src="../themefolder/js/core/popper.min.js"></script>
    <script src="../themefolder/js/core/bootstrap.min.js"></script>
    <script src="../themefolder/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="../themefolder/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="../themefolder/js/plugins/chartjs.min.js"></script>

    <script>
        $(function(){
            activeNav('productnav')
        })
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }

        function activeNav(data){
            $(".nav-link").removeClass('active');
            $("#" + data).addClass('active');
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../themefolder/js/material-dashboard.min.js?v=3.1.0"></script>
    <script src="~/js/site.js"></script>
</body>

</html>